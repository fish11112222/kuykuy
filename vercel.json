{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/messages.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/users.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/auth.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/chat/theme.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/messages",
      "dest": "/api/messages"
    },
    {
      "src": "/api/users",
      "dest": "/api/users"
    },
    {
      "src": "/api/auth",
      "dest": "/api/auth"
    },
    {
      "src": "/api/chat/theme",
      "dest": "/api/chat/theme"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}